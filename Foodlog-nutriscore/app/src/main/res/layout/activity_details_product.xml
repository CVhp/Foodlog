<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Options.DetailsProductActivity">

    <ImageView
        android:id="@+id/product_imageView_details"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="6dp"
        app:srcCompat="@drawable/pomme" />

<!--    NOM -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="@string/client_lastname" />

    <TextView
        android:id="@+id/details_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Nom4"
        android:textSize="20sp"
        android:textStyle="bold" />`

    <EditText
        android:id="@+id/edit_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
    />

<!--    TYPE -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Type du produit à ajouter :" />

    <TextView
        android:id="@+id/details_sexe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="HOMME"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/type_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:entries="@array/level_array" />


<!--    DATE -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Date de péremption :"/>

    <TextView
        android:id="@+id/details_actif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Date"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/DetailDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        android:visibility="gone"
        android:hint="Choisir la date"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/quantite"
            android:layout_marginRight="120dp"/>

        <!--    UNITE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unite" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--   STOCK  -->
        <!--   valeur -->
        <TextView
            android:id="@+id/details_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stock4"
            android:textSize="20sp"
            android:layout_marginRight="140sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />`
        <!--    Modif -->
        <TextView
            android:id="@+id/edit_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="140sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Entrer la quantité"
            android:visibility="gone"
            />

        <!--    UNITE -->
        <!--   valeur -->
        <TextView
            android:id="@+id/details_unite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unite4"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!--   modif -->
        <Spinner
            android:id="@+id/unite_modif_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="10sp"
            android:layout_centerHorizontal="true"
            android:entries="@array/unite_array" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/modifier"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:visibility="gone"
        android:text="Modifier"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="qualité nutritionnelle"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/detail_nutriscore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Qualite4"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
